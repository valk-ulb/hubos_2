[
    {
        "name":"rule_example_1",
        "description": "rule example contains any",
        "when":{
            "event": "mqtt.test1",
            "context": "updated",
            "value": "event1"
        },
        "condition":  [
        ],
        "then": [
            {
                "access": "NetworkClient",
                "type": "service",
                "context": {
                    "period": "600",
                    "host":"all",
                    "concern":"test1_service"
                }
            },
            {
                "access": "NetworkClient",
                "type": "service",
                "context": {
                    "period": "200",
                    "host":["server1","server2"],
                    "concern":"test1_service"
                }
            },
            {
                "access": "myDeviceName",
                "type":"device",
                "context":{
                    "period": "300",
                    "concern": "test1_service"
                }
            },
            {
                "access": "pass_through",
                "type":"flow",
                "context":{
                    "concern": "test1_service",
                    "value": "event1"
                }
            }
        ]
    }
]